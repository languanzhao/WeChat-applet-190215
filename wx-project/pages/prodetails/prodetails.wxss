/* pages/details/details.wxss */
.header{
	width: 100%;
	height: 347rpx;
	position: relative;
	overflow: hidden;
}
.header .header-bg{
	width: 100%;
	height: 100%;
	filter: blur(60rpx);
	position: absolute;
	z-index: 1;
}
.header .header-detail-info{
	width: 100%;
	height: 100%;
	position: absolute;
	z-index: 2;
}

.main{
	width: 709rpx;
	height: 250rpx;
	margin: 0 auto;
	margin-top: 47rpx;
	display: flex;
	justify-content: space-between;
}

.header-image{
	width: 200rpx;
	height: 250rpx;
	border-radius: 13rpx;
	box-shadow: 0 0 8rpx #dddddd;
	overflow: hidden;
}
.header-image-item{
	width: 100%;
	height: 100%;
}

.message{
	width: 380rpx;
}
.message .mes-title{
	font-size:38rpx;
	margin-bottom:20rpx;
	font-weight: bold;
	font-style: italic;
	text-shadow:8px 2px 4px #000;
}
.message text{
	font-size: 28rpx;
	display: block;
	line-height: 38rpx;
	color:#fff;
}


.score{
	width: 60rpx;
	text-align: center;
}
.score .bg{
	width: 60rpx;
	height: 60rpx;
	border-radius: 50%;
	background: #fff;
	text-align: center;
	overflow: hidden;
	line-height: 60rpx;
}
.score .van-icon{
	margin-top: 16rpx;
}

.score text{
	text-align: center;
	display: block;
	font-size: 28rpx;
	color: #fff;
}

.video-title{
	padding:20rpx 18rpx;
	font-size:32rpx;
	box-sizing: border-box;
	font-weight: bold;
}
.video{
	width:100%;
	height:200rpx;
}
.gut{
	padding: 0 18rpx;
	box-sizing: border-box;
}
.gut .gut-title{
	font-size: 32rpx;
	font-weight: bold;
	display: block;
	padding: 20rpx 0;
}
.gut .gut-main-off{
	height:80rpx;
	overflow: hidden;
}
.gut .gut-main-on{
	height: auto;
}
.gut .story{
	font-size: 30rpx;
	line-height:38rpx;
	text-indent:2em;
}

.gut .btn{
	display:block;
	font-size: 26rpx;
	text-align: center;
	color:#1989FA;
}


.actors{
	border-top: 20rpx solid #e6e6e6;
	border-bottom: 20rpx solid #e6e6e6;
	box-sizing: border-box;
	padding:0rpx 15rpx;
	height:450rpx;
}
.actors-list{
	display: flex;
	
}
.actors-item{
	text-align: center;
	width:300rpx;
	height:550rpx;
	margin-right:15rpx;
}
.actors .actors-title{
	font-size: 32rpx;
	font-weight: bold;
	height:85rpx;
	line-height: 90rpx;
}
.actors .photo{
	width: 160rpx;
	height: 160rpx;
	border-radius: 50%;
	overflow: hidden;
}
.actors text{
	font-size: 27rpx;
	line-height: 27rpx;
	display: block;
	margin:10rpx 0rpx;
}
.roleName,.director{
	color: #666666;
}
.comment .title{
  font-size: 32rpx;
	font-weight: bold;
  border-bottom:6rpx solid #e6e6e6;
	height:80rpx;
	line-height:80rpx;
  padding-left:20rpx;
  }
.comment .info{
	display: flex;
	justify-content:space-around;
	margin-top:40rpx;

  }
.comment image{
	height:70rpx;
	width:70rpx;
	border-radius:50%;
}
.comment .right{width:80%;border-bottom:3rpx solid #e6e6e6;font-size:24rpx;color:#444;}

.comment .right .grade{margin:10rpx 0;}
.comment .right .content{font-size:30rpx;margin:10rpx 0;}

.comment .right .bottom{display:flex;justify-content:space-between;align-items:center;font-size:28rpx;color:#999;padding:0 30rpx 30rpx 0;}
.comment .right .bottom .praiseCount{color:red;} 
.comment .total{
	display: block;
	height:100rpx;
	line-height:100rpx;
	font-size:30rpx;
	color:#f63;
	text-align:center;
	border-top:1px solid #e6e6e6;
	margin-top:40rpx;
}
/* 隐藏滚动条 */
::-webkit-scrollbar{
width: 0;
height: 0;
color: transparent;
}
.boxOffice{
	display: flex;
	justify-content: space-around;
	border-bottom:20rpx solid #e6e6e6
}
.boxOffice .record{
	font-size:40rpx;
	color:#e54847;
	text-align: center;
	font-weight: bold;
}
.boxOffice .decription{
	font-size:30rpx;
	color: #80848F;
	text-align: center;
	margin: 20rpx 0 10rpx 0;
}