.wrapper{display:flex;flex-wrap:wrap;margin-top:10rpx;height:auto;padding: 0rpx 30rpx;box-sizing: border-box;
}
.result{font-size:30rpx;text-align:left;margin:10rpx 0rpx 30rpx 30rpx;padding-left:20rpx;

border-left:8rpx solid #e54847;line-height:50rpx;}
.searchInfo{width:200rpx;height:270rpx;display:flex;flex-direction:column;margin-right:30rpx;}
.searchInfo image{width:200rpx;height:250rpx;}
.searchInfo view{font-size:22rpx;text-align:center;}
.history{display: flex;flex-wrap:wrap;padding: 0rpx 20rpx;}
.history view{font-size:26rpx;background:#f2f2f2;padding:8rpx;margin:10rpx 10rpx;display:block;}
.hot{padding:0 20rpx;}
.hot text{font-size:26rpx;color:#928e8e;padding:10rpx;margin:10rpx 10rpx;display:inline-block;
border:2rpx solid #d4d0d0;border-radius:20rpx;background: #fffefe;}
.searchText{white-space: nowrap;overflow: hidden;text-overflow: ellipsis;}