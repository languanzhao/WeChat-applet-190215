.wrapper{
	width: 100vw;
	height: 100vh;
	background:#f3f3f3;
}
.wrapper .title{
	position: relative;
	width: 100%;
	height: 120rpx;
	line-height: 120rpx;
	padding-left:30rpx;
	font-size: 32rpx;
	/* box-sizing: border-box; */
	background: #fff;
	border-top:20rpx solid #f3f3f3;
}
.wrapper .title i-icon{
	padding-right: 20rpx;
}
/* 箭头 > */
.wrapper .title:after {
  position: absolute;
  right:80rpx;
  top:50rpx;
  content: "";
  width:22rpx;
  height:22rpx;
  border-right: 1px solid #b4afaf;
  border-top: 1px solid #b4afaf;
  transform:rotate(45deg);
}
.demo-container{
	width: 500rpx;
	height: 100vh;
	background: #fff;
}
.demo-container view{
	display: flex;
	justify-content: space-between;
	padding:0 15rpx;
	height:100rpx;
	line-height: 100rpx;
	border-bottom:2rpx solid #f3f3f3;
}
.demo-container view text:first-child{
	color: #000;
}
.demo-container view text{
	font-size:26rpx;
	color:#999;
}
.addPhoneContact{
	width: 600rpx;
	height: 600rpx;
	background: #fff;
	display: flex;
	justify-content: center;
	flex-direction: column;
	align-items: center;
	padding-bottom: 30rpx;
}
.addPhoneContact .addPhoneContactTitle{
	font-size: 40rpx;
	margin-bottom: 60rpx;
}
.addPhoneContact view{
	font-size: 32rpx;
}
.addPhoneContact input{
	width: 300rpx;
	height: 60rpx;
	border: 1rpx solid #19BE6B;
	padding:0 10rpx;
	text-align:center;
	margin:10rpx 0 60rpx 0;
}
.addPhoneContact button{
	width: 200rpx;
	height: 60rpx;
	border-radius: 30rpx;
	padding: 0;
	background: #1989FA;
	line-height: 60rpx;
	font-size: 40rpx;
	color: #fff;
}
.addPhoneContact button:after{
	border: none;
}